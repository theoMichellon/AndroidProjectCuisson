<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titre_page">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- padding -->
        <item name="android:paddingTop">@dimen/padding_liste</item>
        <item name="android:paddingBottom">@dimen/padding_liste</item>
        <!-- Style text -->
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <!-- couleur -->
        <item name="android:textColor">@color/brun</item>
    </style>
    <style name="btn">
        <item name="android:backgroundTint">@color/brun</item>
    </style>
    <style name="titre_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- padding -->
        <item name="android:paddingTop">@dimen/padding_liste</item>
        <item name="android:paddingBottom">@dimen/padding_liste</item>
        <!-- Style text -->
        <item name="android:textSize">@dimen/taille_texte_liste</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <!-- position titre -->
        <item name="android:gravity">right</item>
        <!-- couleur -->
        <item name="android:textColor">@color/couleur_item_liste</item>
    </style>
</resources>